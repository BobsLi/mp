/* pages/supplier-info/index.wxss */
.head{
  background-color: #09e;
  padding: 40rpx 20rpx;
}
.head-flex{
  flex-direction: column;
  align-items: center;
}
.head .img-box{
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  border: 2px solid #eee;
}
.supplier-name{
  color: #fff;
  font-size: 36rpx;
  margin: 20rpx auto 10rpx;
}
.address-flex{
  align-items: center;
  vertical-align: baseline;
}
.addr-icon{
  width: 24rpx;
  height: 24rpx;
  text-align: left;
  margin-right: 10rpx;
}
.addr-text{
  color: #f5f5f5;
  opacity: .6;
  font-size: 24rpx;
}
.info-title-box{
  padding: 30rpx 20rpx; 
}
.des-box{
  
}
.des-content{
  padding: 30rpx;
}
.list-row{
  border-bottom: 1px solid #d4d4d4;
}
.list-row:last-of-type{
  border-bottom-color: transparent;
}
.product-info-box{
}
.product-foot{
}
.product-img-box{
  width: 160rpx;
  height: 160rpx;
}
.product-rt{
  padding: 0 20rpx;
}
.product-name{
  font-size: 34rpx;
  line-height:1.2;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.row-2>view{
  display: inline-block;
  vertical-align: middle;
  position: relative;
  overflow: hidden;
  max-width: 50%;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:normal;
  word-break:break-all;

}
.spec{
  padding-right: 20rpx;
}
.praise-box image{
  width: 26rpx;
  height: 26rpx;
}
.foot-lt .icon-box{
  display: inline-block;
  margin-right: 40rpx;
}