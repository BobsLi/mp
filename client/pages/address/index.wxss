.container {
  background-color: #F2f2f2;
}
.weui_cell{
    position: relative;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
    display: block;
}
.address_block{
  display: inline-block;
  width: 100%;
  margin-right: 5px;
}
.address_text{
  display: inline-block;
  font-size: 14px;
  color: #939393;
}
.address_edit {
  position:absolute;
  top:24px;
  right:40px;
  width:21px;
  height:20px;
  line-height:19px;
  background:#ff0000;
  color:#fff;
  border-radius:77%;
  text-align:center;
  font-size:15px;
}
.address_mobile{
  padding-left:20px;
}
.address_add{
  width:100%;
  height:50px;
  background-color: green;
  text-align:center;
  font-size:17px;
  line-height:48px;
  color:white;
  font-weight: bold;
}

