/* pages/pl/index.wxss */
.carousel-box{
  position: relative;
}
.swiper-img{
  width: 100%;
  max-width: 100%;
  max-height: 100%;
}
.weui-search-bar{
  background-color: transparent;
  border: none;
}
.search-box{
  position: absolute;
  bottom: 5%;
  left: 0;
  width: 100%;
}
.search-fixed{
  position: fixed;
  z-index: 10;
  top: 0;
  width: 100%;
  background: -webkit-linear-gradient(top, rgba(105,195,170, 1), rgba(105,195,170, 0.3));
}
.keywords-search-box{
  padding: 0 10px;
  clear: both;
  margin-top: -10rpx;
}
.search-keyword-item{
  font-size: 24rpx;
  color: #fff;
  padding-right: 20rpx;
  position: relative;
  float: left;
}
.search-keyword-item::after{
  position: relative;
  right: -10rpx;
  display: inline-block;
  content: '|';
}
.search-keyword-item:last-of-type{
  padding-right: 0;
}
.search-keyword-item:last-of-type::after{
  display: none;
}
.tech-type-box{
  background-color: #f5f5f5;
  padding: 10px 0;
}
.type-scroll{
  white-space: nowrap;
}
.type-item{
  display: inline-block;
  width: 80px;
  text-align: center;
  overflow: hidden;
}
.type-name{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.type-bg-img{
  width: 50px;
  height: 50px;
  border: 1px solid #eee;
  border-radius: 100%;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center;
  margin: auto;
}
.product-img-box{
  width: 80px;
  height: 80px;
}
.product-img{
  max-height: 100%;
  max-width: 100%;
  width: 100%;
  height: 100%
}
.product-name{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: inherit;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  -webkit-box-pack: start;
  -webkit-box-align: start;
  font-size: 14px;
}
.product-tag{
  color: #f80;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.supplier-name{
  color: #09e;
  text-decoration: underline;
}
.product-price{
  color: red;
  font-weight: bold;
  font-size: 32rpx;
}
.icon-box{
  display: inline-block;
  vertical-align: middle;
  margin-right: 30rpx;
}
.address-box{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.address-box .icon-text{
  max-width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.access-arrow{
  position: absolute;
  right: 15px;
}
.supplier-name{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.loading-box{
  text-align: center;
  color: #999;
}