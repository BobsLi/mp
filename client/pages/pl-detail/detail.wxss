/* pages/pl/detail.wxss */
.info-body{
  padding: 0 30rpx;
}
.swiper-img{
  width: 100%;
  max-width: 100%;
  max-height: 100%;
}
.info-section{
  margin-top: 20rpx;
}
.info-section:first-child{
  /* margin-top: 0; */
}
.product-name{
  font-size: 32rpx;
}
.base-info-box{
  clear: both;
  position: relative;
  padding: 20rpx;
  background-color: #f7f8fa;
  width: 100%;
  overflow: hidden;
}
.base-info-lt{
  border-right: 1px solid #eee;
}
.row-lt{
  width: 160rpx;
}
.base-info-rt{
  font-size: 24rpx;
  width: 140rpx;
  text-align: center;
  vertical-align: middle;
  align-items: center;
  display: inline-block;
  position: relative
}
.trade-text{
  color: #999;
}
.dz-img{
  width: 40rpx;
  height: 40rpx;
}
.dz-box{
  text-align: center;
  margin: auto;
  position: relative;
  margin-top: 10rpx;
}
.row-item{
  margin-bottom: 20rpx;
}
.opt-box{
  padding: 0 20rpx;
  border-bottom: 1px dashed #eee;
}
.step-row, .num-row, .price-row{
  align-items: center;
}
.opt-item{
  display: inline-block;
  vertical-align: middle;
  padding: 6rpx 20rpx;
  transition: all .2s ease-in-out;
  border: 1px solid #eee;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 8rpx;
}
.opt-item:last-child{
  margin-right: 0;
}
.active-opt-item{
  border-color: #f00;
  background-color: #f00;
  color: #fff;
}
.other-box{
  padding: 0 20rpx;
}

.footer-box{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  display: flex;
  background-color: #fff;
  box-shadow:0 0 8rpx 0;
  text-align: center;
  z-index: 66;
}
.footer-box > view {
  position: relative;
  width: 135rpx;
  padding: 10rpx;
  text-align: center;
  overflow: hidden;
  float: left;
  align-items: center;
  height: 100%;
}
.footer-box .base-icon{
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
  width: 13px;
  height: 13px;
  margin: auto;
}
.footer-box .base-text{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.buyer-box{
  background-color: #e64340;
  line-height: 2;
  padding: 0;
  font-size: 34rpx;
  color: #fff;
}
.share-btn{
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 2;
}