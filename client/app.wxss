/**app.wxss**/
@import "libs/weui/weui.wxss";
page{
  height: 100%;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #F2f2f2;
}
.section{
  margin-top: 20rpx;
}
.section:first-of-type{
  margin-top: 0;
}
.primary-color{
  color: #0099EE;
}
.deep-color{
  color: #333;
}
.normal-color{
  color: #666;
}
.shallow-color{
  color: #999;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 28rpx;
} 
.icon-box>view{
  display: inline-block;
  vertical-align: baseline;
}
.icon-box .base-icon{
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
  width: 26rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

/* 数量加减输入框 */
.num-box{
  display: flex;
}
.num-box .num-reduce, .num-box .num-input, .num-box .num-add {
  height: 60rpx;
  width: 60rpx;
  line-height: 58rpx;
  text-align: center;
  border: 1px solid #eee;
}
.num-box .num-input{
  width: 90rpx;
}
.num-box .num-input input{
  height: 100%;
  width: 100%;
}

/* 金钱显示样式 */
.money-box{
  color: #fe2b21;
}
.money-box .money-num{
  font-size: 32rpx;
}

.info-title-box{
  padding: 30rpx 0;
  background-color: #fff;
  width: 100%;
   border-bottom: 1px solid #eee; 
}
.info-title-box .title-text{
  padding: 0 20rpx;
  border-left: 8rpx solid #0099EE;
  font-size: 32rpx;
}
.title{
  color: #333;
  font-size: 32rpx;
}
.label-inline{
  vertical-align: middle;
  display: inline-block;
  margin-right: 20rpx;
  padding: 10rpx 0;
}
.label-inline:last-child{
  margin-right: 0;
}

/* 关于图片的 */
.img-box{
  position: relative;
  overflow: hidden;
  margin: auto;
  text-align: center;
}
.img-box image{
  width: 100%;
  max-width: 100%;
  max-height: 100%;
}

.article-item{
  background-color: #fff;
  margin-top:30rpx;
}
.weui-loadmore__tips_in-line{
  background-color: transparent;
}